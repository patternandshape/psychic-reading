<div class="question-title">
  <h3>{{model.body}}</h3>
  {{question-detail question=model}}
  {{edit-question question=model edit2="edit3"}}
</div>
<div class="new-answer">
  {{new-answer question=model saveAnswer2="saveAnswer3"}}
  </div>
  <ul>
    {{#each model.answers as |answer|}}
      <h3>{{answer.body}}</h3>
      <h4>Answer from {{answer.author}}</h4>
    {{/each}}
  </ul>
