{{#if editQuestionForm}}
  <div class="edit-question">
    <h4>Edit Question</h4>
    <form>
      <div class="form-group">
        <label for="author">Name: </label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="body">Question: </label>
        {{input value=body id="body"}}
      </div>

      <div class="form-group">
        <label for="notes">Notes: </label>
        {{input value=notes id="notes"}}
      </div>

      <button {{action 'edit1' question}}> Save </button>
    </form>
    </div>
{{else}}
  <button {{action 'editQuestionForm'}}> Edit </button>
{{/if}}
